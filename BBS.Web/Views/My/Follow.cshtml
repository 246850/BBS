@model PagedList<AccountModel>
@{
    ViewData["Title"] = "我的关注";
}
<style>
    .avatar_list ul {
        padding: 0;
        margin: 0;
        padding-right: 5px;
        display: flex;
        flex-flow: row wrap;
    }

    .avatar_list li {
        margin: 10px 5px;
        text-align: center;
        list-style: none;
        max-width: 95px
    }

        .avatar_list li .avatar_name {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
</style>
@await Component.InvokeAsync("MyInfo")
<div class="container">
    <div class="tt-tab-wrapper">
        @await Component.InvokeAsync("MyInfoTab")
        <div class="tab-content pt-3 pb-3 alert-white">
            <div class="tab-pane tt-indent-none show active" role="tabpanel">
                <div class="tt-wrapper-inner tt-layout-tab">
                    @if (Model.Count <= 0)
                    {
                        <img src="/images/404.png">
                    }
                    else
                    {
                        <div class="avatar_list">
                            <ul>
                                @foreach (var item in Model)
                                {
                                    <li>
                                        <a href="@Url.Action("Topic", "User", new { id = item.Id })" title="@item.NickName">
                                            <div class="rounded-circle">
                                                <img src="@item.Avatar">
                                            </div>
                                            <div class="avatar_name">
                                                @item.NickName
                                            </div>
                                        </a>
                                        <i class="fa fa-trash text-danger" style="cursor:pointer" onclick="doCancelFollow(@item.Id, this)" title="取消关注"></i>
                                    </li>
                                }
                            </ul>
                        </div>
                        <nav class="mt-3">
                            @await Component.InvokeAsync("Pagination", Model.ToPagination("Follow", "My"))
                        </nav>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var loading = false;
    function doCancelFollow(id, element) {
        if (loading) return;
        loading = true;
        $.post("@Url.Action("Delete", "Follow")?id=" + id, function (data) {
            loading = false;
            $(element).parent().fadeOut();
        })
    }
</script>
